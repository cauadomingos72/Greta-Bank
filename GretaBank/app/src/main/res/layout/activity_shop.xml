<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_rectangle_no_stroke"
    tools:context=".ShopActivity">

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:rotation="180"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_forward_24"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo_black"
        android:text="LOJA"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">



        <LinearLayout
            android:id="@+id/loja1_btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center|left"
            android:paddingStart="5dp"
            android:background="@drawable/white_rectangle">

            <View
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@color/orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="LOJA 1\nX% OFF"
                android:textColor="@color/black"
                android:fontFamily="@font/archivo_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loja2_btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center|left"
            android:paddingStart="5dp"
            android:background="@drawable/white_rectangle">

            <View
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="@color/grey"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="LOJA 2\nX% OFF"
                android:textColor="@color/black"
                android:fontFamily="@font/archivo_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loja3_btn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center|left"
            android:paddingStart="5dp"
            android:background="@drawable/white_rectangle">

            <View
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:background="#FFB649"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="LOJA 3\nX% OFF"
                android:textColor="@color/black"
                android:fontFamily="@font/archivo_black"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/grtalogo_removebg_preview" />

</androidx.constraintlayout.widget.ConstraintLayout>